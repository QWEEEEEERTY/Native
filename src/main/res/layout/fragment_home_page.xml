                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

            </LinearLayout>

            <!-- Repeat the same LinearLayout for two more posts -->

        </LinearLayout>

    </ScrollView>


</FrameLayout>